<% randn = rand(1..3) %>
<% if randn == 1%>
  <div class="container-fluid head pink">
<% elsif randn == 2%>
  <div class="container-fluid head blue">
<% elsif randn == 3%>
  <div class="container-fluid head green">
<% end %>
  <h1>Our weekly schedule</h1>
  <h1 class="sub">Choose a day</h1>
</div>

<div class="container marketing days">

<% if !@dayX.empty? %>
        <% @dayX.each do |x| %>
            <% if x.display_size == 6 %>
              <div class="col-lg-6">
            <% else %>
              <div class="col-lg-12">
            <% end %>
                <a href="/schedule?time=<%=x.id%>">
                  <div class="day">
                    <h4><%=x.full_date%></h4>
                  </div>
                </a>
              </div>
          <% end %>
<% else %>
<div class="container marketing">
  <h2 class= "sub">No days to be dispalyed! </h2>
</div>

<% end %>


</div>
