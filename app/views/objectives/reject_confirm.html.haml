- content_for :title, "Show Requested Objective"
.row
  .col-md-12
    -#= link_to("<< Back to List",unapproved_objectives_path, :class => 'back-link')
    %h1
      %a.button.btn.btn-primary{:type => "button",:href => unapproved_objectives_path} Back to List
  .col-md-6
    =render(partial:"objective_details",locals:{:@objective => @objective})
  .col-md-6
    .panel.panel-default
      .panel-heading
        %h3.panel-title Confirm rejection:
      .panel-body

        =form_tag(reject_objective_path(@objective.id), :method => 'patch') do
          =label_tag(:label,"Message | reason of rejection: ")
          %br
          =text_area_tag(:message,"",{:style => "width: 100%;height:150px"})
          %hr
          %button{class:"btn btn-warning",type: :submit}
            ="<span class=\"glyphicon glyphicon-remove-sign\"></span>".html_safe+" Reject!"

        -#=button_to( approve_objective_path(@objective.id),class:"btn btn-success",method: :patch) do
          -#="<span class=\"glyphicon glyphicon-ok-sign\"></span>".html_safe+" Approve"
