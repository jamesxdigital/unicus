.panel.panel-default
  .panel-heading
    %h3.panel-title Objective details:
  .panel-body
    .table-responsive
      %table{class:'table table-striped table-bordered table-condensed',:summary => "Objective detail view"}
        %tr
          %th Objective_ID
          %td= @objective.id
        %tr
          %th User
          %td= "#{@user.givenname} #{@user.sn} "
        %tr
          %th Title
          %td= @objective.title
        %tr
          %th Deadline
          %td= @objective.deadline.strftime("%d/%m/%Y - %I:%M%p")
        %tr
          %th Description:
          %td
            .well
              =@objective.description
        %tr
          %th Created
          %td= @objective.created_at.strftime("%d/%m/%Y - %I:%M%p")
  -if @allow_approval
    .panel-footer.clearfix
      =button_to( approve_confirm_objective_path(@objective.id),class:"btn btn-success",method: :get,style:"float:left;") do
        ="<span class=\"glyphicon glyphicon-ok-sign\"></span>".html_safe+" Approve"
      =button_to( reject_confirm_objective_path(@objective.id),class:"btn btn-warning",method: :get,style:"float:right;") do
        ="<span class=\"glyphicon glyphicon-remove-sign\"></span>".html_safe+" Reject"