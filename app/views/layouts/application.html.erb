<!DOCTYPE html>
<html>
<head>
  <title>The Sheffield Conference: Team 21</title>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
<script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>


  <!-- HEADER
  ================================================== -->
<div id="gotop"></div>
  <nav class="navbar navbar-default navbar-inverse">
      <div class="container">

          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <%= link_to image_tag("logo.png", class: 'logo'), root_path %>
          </div>

          <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-right">
              <li><%= link_to 'Home', root_path %></li>
              <li><%= link_to 'Schedule', days_schedule_path %></li>
              <li><%= link_to 'Speakers', speakers_list_path %></li>
              <% if user_signed_in? %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true">Account <span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li class="dropdown-header">Account</li>
                  <li>
                    <% if (can? :index, current_user) %>
                      <%= link_to "Admin Panel",  cp_cpHome_path %>
                    <% end %>
                  </li>
                  <li><%= link_to "Change Password",  change_password_path %></li>
                  <li><a href="biography">Biography</a></li>
                  <li role="separator" class="divider"></li>
                  <li><a href="calendars">Personal schedule</a></li>
                  <li><a href="unotifications">Notifications</a></li>
                  <li role="separator" class="divider"></li>
                  <li><%= link_to "Logout", destroy_user_session_path, :method => :delete,data: { confirm: "Are you sure you want to logout #{current_user.email}?" }%></li>
                </ul>
              </li>
              <% end %>
              <li>
                <% if !user_signed_in? %>
                  <%= link_to 'Login', new_user_session_path %>
                <% end %>
              </li>
            </ul>
         </div>

      </div>
    </nav>

    <!-- CONTENT
    ================================================== -->
    <div class="buffer-top">
      <div class="container">
      <%if flash[:notice] %>
        <div class="alert alert-success"><%= flash[:notice] %></div>
      <% end %>

      <%if flash[:alert] %>
        <div class="alert alert-warning"><%= flash[:alert] %></div>
      <% end %>
      </div>
      <%= yield %>
    </div>

    <!-- FOOTER
    ================================================== -->
    <footer class="footer">
      <div class="container">
          <div class="center-text margintop20">
            <p>
               <a href="#gotop" class="btn gotopbtn">
                 <span class="glyphicon glyphicon-arrow-up"></span></a></p>
          </div>
          <p class="text-muted">A Software Hut project by Team 21 Â© 2016 The University of Sheffield.</p>
      </div>
    </footer>

   <!-- Bootstrap core JavaScript
   ================================================== -->
