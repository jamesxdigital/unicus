
<div class="col-xs-12 col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
  <h1 class="page-header">Add a lecture</h1>

  <div class="alert alert-info" role="alert">When add a break time (eg: coffee break), please click 'This is not a lecture'. A break can be put in a normal column.  </div>

  <%= form_for :lecture, url:lectures_path do |f| %>

  <% if @lecture.errors.any? %>
   <div class="alert alert-danger" role="alert">
     <h2><%= pluralize(@lecture.errors.count, "error") %> prohibited this post from being saved:</h2>

     <ul>
     <% @lecture.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <form>
    <div class="form-group">
      <%=label_tag "Lecture Title" %><br>
      <%= f.text_field :lecture_title, :class => "form-control", :placeholder => "Lecture title" %>
    </div>

    <div class="form-group">
      <%= label_tag "This is not a lecture" %>
      <%= f.check_box :is_break %>
    </div><br>

    <div class="form-group">
      <%= label_tag "Select Lecture Day" %><br>
      <%= f.collection_select(:day_id, Day.all, :id, :date, :prompt => true) %>
    </div>

    <div class="form-group">
      <%= label_tag "Select Day Column" %><br>
      <%= f.select(:column_name, [['Splitting'], ['Insertion'],['Enabling'],['Extra'],['Plenary Session']], :prompt => true) %>
    </div>

    <div class="form-group">
      <%=label_tag "Start Time" %><br>
      <%= f.text_field :start_time, :class => "form-control", :placeholder => "hh:mm" %>
    </div>

    <div class="form-group">
      <%=label_tag "End Time" %><br>
      <%= f.text_field :end_time, :class => "form-control", :placeholder => "hh:mm" %>
    </div>

    <div class="form-group">
      <%=label_tag "Location" %><br>
      <%= f.text_field :location, :class => "form-control", :placeholder => "Diamond LT03" %>
    </div>

    <div class="form-group">
      <%=label_tag "Key Speaker" %><br>
      <%= f.text_field :key_speaker, :class => "form-control", :placeholder => "Email address" %>
    </div>
      <!-- speakers that are not listed in ../speakers -->
      <div class="form-group">
        <%=label_tag "Description" %><br>
        <%= f.text_area :description, :class => "form-control", :placeholder => "Description" %>
      </div>

    <%=submit_tag "Submit", :class=>"btn btn-default" %>
  </form>
</div>
<% end %>
