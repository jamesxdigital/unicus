
<div class="col-xs-12 col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
<h1> User's index </h1>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Email</th>
      <th>Role</th>
      <th>Created</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.role %> </td>
        <td><%= time_ago_in_words(user.created_at) %> ago</td>
        <td>
          <% if can? :update, user %>
            <%= link_to 'Edit', edit_user_path(user) %>
          <% end %>
          <% if (can? :destroy, user) && current_user != user %>
            <%= link_to "Delete", user_path(user), :method => :delete,data: { confirm: "Are you sure you want to delete this #{user.email}?" }%>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


</div>
