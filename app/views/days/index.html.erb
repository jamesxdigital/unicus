
      <div class="col-xs-12 col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
      <h1 class="page-header">Manage days</h1>
      <h2 class="sub-header">Days currently in the databse</h2>
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>ID</th>
              <th>Date</th>
              <th>Day</th>
              <th>Edit</th>
              <th>Delete</th>
            </tr>
          </thead>
          <tbody>
            <% @days.each do |day| %>
            <tr>
              <td><%= day.id %></td>
              <td><%= day.date %></td>
              <td><%= day.name %></td>
              <td><%= link_to 'Edit', edit_day_path(day) %></td>
              <td><%= link_to 'Delete', day_path(day),
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
