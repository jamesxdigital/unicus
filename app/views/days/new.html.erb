    <div class="col-xs-12 col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
      <h1 class="page-header">Add a day</h1>

      <%= form_for :day, url:days_path do |f| %>

      <% if @day.errors.any? %>
       <div class="alert alert-danger" role="alert">
         <h2><%= pluralize(@day.errors.count, "error") %> prohibited this post from being saved:</h2>

         <ul>
         <% @day.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
      <% end %>

      <form>
        <div class="form-group">
          <%=label_tag "Type date" %><br>
          <%= f.text_field :date, :class => "form-control", :placeholder => "dd/mm/yyyy" %>
        </div>
        <div class="form-group">
          <%= label_tag "Select Day" %><br>
          <%= f.select(:name, [['Monday'], ['Tuesday'],['Wednesday'],['Thursday'],['Friday'],['Saturday'],['Sunday']], :prompt => true) %>
        </div>
        <div class="form-group">
          <%= label_tag "Display size" %><br>
          <%= f.select(:display_size, [['6'], ['12']]) %>
        </div>
        <%=submit_tag "Submit", :class=>"btn btn-default" %>
      </form>
    </div>
<% end %>
